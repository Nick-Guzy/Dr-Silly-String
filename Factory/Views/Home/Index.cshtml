@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Welcome to the To Do List!</h1>

<hr>

<h4>Engineers</h4>
@if (Model["engineers"].Length == 0)
{
  <p>No engineers have been added yet!</p>
} 
<ul>
  @foreach (Engineers cat in Model["engineers"])
  {
    <li>@Html.ActionLink(@cat.Name, "Details", "Engineers", new { id = @cat.EngineerId})</li>
  }
</ul>

<h4>Items</h4>
@if (Model["items"].Length == 0)
{
  <p>No items have been added yet!</p>
} 
<ul>
  @foreach (Item item in Model["items"])
  {
    <li>@Html.ActionLink(@item.Description, "Details", "Items", new { id = @item.ItemId})</li>
  }
</ul>

<hr>

<p>@Html.ActionLink("Manage items", "Index", "Items")</p> 
<p>@Html.ActionLink("Manage engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("Manage tags", "Index", "Tags")</p>
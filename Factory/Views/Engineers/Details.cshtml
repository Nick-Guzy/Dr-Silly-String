@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;
@using Factory.Models;
@using System.Collections.Generic;

<h2>Engineer Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.Machines.Count == 0)
{
  <p>This engineer does not contain any machine</p>
}
else
{
  <h4>Machines the engineer contains:</h4>
  <ul>
  @foreach(Machine machine in Model.Machines)
  {
    string machines = "";
    @if(machine.JoinEntities.Count == 0)
    {
      machines = "This engineer does not have any machines.";
    }
    else
    {
      List<string> machineList = new List<string>();
      @foreach(MachineEngineer join in machine.JoinEntities)
      {
        machineList.Add(join.Machine.Description);
      }
      machines = String.Join(", ", machineList);
    }
    <li>@machine.Description | Machines: @machines</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to engineers", "Index")</p>
<p>@Html.ActionLink("Edit Engineers", "Edit", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Add new machine", "Create", "Machines")</p>